<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.rainng.coursesystem.dao.mapper.OrderMapper">
    <resultMap id="insertOrderMap" type="com.rainng.coursesystem.model.entity.Order" >
        <id property="id" column="order_id"/>
        <result property="customerId" column="od_customer_id"/>
        <result property="hotelId" column="od_hotel_id"/>
        <result property="roomId" column="od_room_id"/>
        <result property="ctime" column="order_ctime"/>
        <result property="status" column="order_status"/>
        <result property="ifShow" column="order_ifshow"/>
        <result property="reason" column="order_reason"/>
    </resultMap>

    <insert id="insertOrder" parameterType="com.rainng.coursesystem.model.entity.Order">
         insert into ht_order_form(order_id,od_customer_id,od_hotel_id,od_room_id,order_ctime,order_status,order_ifshow,order_reason)
         values(#{id},#{customerId},#{hotelId},#{roomId},#{ctime},#{status},#{ifShow},#{reason})
    </insert>
</mapper>
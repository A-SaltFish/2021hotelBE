<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.rainng.coursesystem.dao.mapper.TSearchMapper">
    <select id="findById" resultType="com.rainng.coursesystem.model.entity.TSearch">
         SELECT hotel_id,hotel_name FROM ht_specification WHERE hotel_id = #{hotel_id}
    </select>

    <select id="findByName" resultType="com.rainng.coursesystem.model.entity.TSearch">
        select hotel_id,hotel_name from ht_specification where hotel_name = #{hotel_name}
    </select>

    <select id="findTSearchAll" resultType="com.rainng.coursesystem.model.entity.TSearch">
        select * from ht_specification
    </select>

</mapper>
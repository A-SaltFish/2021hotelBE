<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.rainng.coursesystem.dao.mapper.UserMapper">


    <insert id="insertUser" parameterType="com.rainng.coursesystem.model.entity.User">
        insert into ht_customer (username,password,email)
         values (#{custormer_name},#{custormer_password},#{custormer_email})
    </insert>

    <select id="queryByEmail" resultType="com.rainng.coursesystem.model.entity.User">
        select *
        from ht_custormer
        where email = #{custormer_email}
    </select>


</mapper>